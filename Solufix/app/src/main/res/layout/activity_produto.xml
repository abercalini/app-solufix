<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



    <EditText
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Pesquise pelo nome do Produto"
        android:layout_marginTop="15dp"
        android:id="@+id/filtro_produto"
        android:background="@drawable/rounded_editetext"/>

    <Button
        android:id="@+id/filtro_botao"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:text="Pesquisar"
        android:background="@drawable/botao_fundo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista_item_produto"
        android:layout_marginTop="100dp"
        ></ListView>

    </LinearLayout>

</RelativeLayout>